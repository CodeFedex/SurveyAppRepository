<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.surveyor.SurveyorDashboardActivity">

    <!-- Resumen -->
    <TextView
        android:id="@+id/surveyorDashboardSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_summary"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botón Encuestas -->
    <Button
        android:id="@+id/surveysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surveys_button"
        app:layout_constraintTop_toBottomOf="@id/surveyorDashboardSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Botón Formularios Realizados -->
    <Button
        android:id="@+id/completedFormsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/completed_forms_button"
        app:layout_constraintTop_toBottomOf="@id/surveysButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
